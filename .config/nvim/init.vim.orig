set mouse=a
set t_Co=256

call plug#begin('~/.local/share/nvim/plugged')
Plug 'fatih/vim-go', { 'do': ':GoUpdateBinaries' }
Plug 'scrooloose/nerdtree', { 'on': 'NERDTreeToggle' }
Plug 'Shougo/deoplete.nvim', { 'do': ':UpdateRemotePlugins' }
Plug 'easymotion/vim-easymotion'
Plug 'rking/ag.vim'
Plug 'tpope/vim-surround'
Plug 'tpope/vim-commentary'
Plug 'tpope/vim-repeat'
" Plug 'godlygeek/tabular'
Plug 'junegunn/vim-easy-align'
Plug 'majutsushi/tagbar'
Plug 'terryma/vim-multiple-cursors'
Plug 'sjl/gundo.vim'

" === Themes & Visual Plugins ===
Plug 'ryanoasis/vim-devicons'
Plug 'yggdroot/indentline'
Plug 'sheerun/vim-polyglot'

call plug#end()


autocmd FileType go nmap <leader>b  <Plug>(go-build)
autocmd FileType go nmap <leader>r  <Plug>(go-run)

map <C-n> :NERDTreeToggle<CR>

let g:deoplete#enable_at_startup = 1

set number " показывать номера строк в редакторе
set relativenumber

set colorcolumn=120 " вертикальная линия после 120 символов
set cursorline
set tabstop=2 " ширина табуляции
set softtabstop=2 " ширина таба при использовании вместо него пробелов
set smarttab
set expandtab
set autoindent
set smartindent

syntax on

set hlsearch
set incsearch
set nohlsearch

set ignorecase
set smartcase


