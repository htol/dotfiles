### Config for using vagrant with virtual box from WSL
export GEM_HOME="$HOME/.local/gem" # TODO: work very strange. need further investigation
export VAGRANT_HOME="$HOME/.local/vagrant.d"
export VAGRANT_WSL_ENABLE_WINDOWS_ACCESS="1"
# export PATH="$PATH:/mnt/c/Program Files/Oracle/VirtualBox"

export ZDOTDIR="$HOME/.config/zsh"
export XDG_CONFIG_HOME="$HOME/.config"
export HISTFILE="$ZDOTDIR/.zsh_history"
export PYENV_ROOT="$HOME/.local/pyenv"
export POETRY_HOME="$HOME/.local/poetry"
export NPM_CONFIG_USERCONFIG="$HOME/.config/npm/npmrc"
export KEYCHAIN_DIR="$HOME/.cache/keychain"

export GOPATH="$HOME/go"
export GOROOT="/usr/lib/go-1.15"
export GO111MODULE=on

export FNM_DIR="$HOME/.local/fnm"

export SDKMAN_DIR="$HOME/.local/sdkman"

#export GRADLE_USER_HOME="$HOME/.local/gradle"

export PATH="$PYENV_ROOT/bin:$POETRY_HOME/bin:$HOME/.local/poetry/bin:$HOME/.local/bin:~/bin:$GOPATH/bin:$GOROOT/bin:$FNM_DIR:$PATH"
